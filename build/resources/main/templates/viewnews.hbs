{{#partial "content"}}

    <h1 style="text-align:center; background-color:rgba(0,0,0,0.7);">All News</h1>
    <h2 style="text-align:center; background-color:rgba(0,0,0,0.7);">To add a Post:
        <a href="/newsform"> Click here</a>
    </h2>
    <br>
    <br>
    <table class="table">

        <tr>
            <th scope="col">Content</th>
            <th scope="col">Department Id</th>
            <th scope="col">Employee Id</th>
        </tr>

        {{#each news}}

            <tr>
                <td>{{content}}</td>
                <td>{{idDepartment}}</td>
                <td>{{usernameId}}</td>
            </tr>

        {{/each}}

    </table>

{{/partial}}

{{>layout.hbs}}
