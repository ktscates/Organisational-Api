{{#partial "content"}}

    <h1>All News</h1>
    <br>
    <br>

    <form action="/news" method="post" >
        <div class="form-group">
            <label>Content</label>
            <textarea type="text" name="content" class="form-control" rows="5" required></textarea>
        </div>
        <div class="form-group">
            <label>Department Id</label>
            <input type="number"  name="idDepartment" class="form-control" required>
        </div>

        <button type="submit" class="button btn-success">Post</button>
    </form>

    <br>
    <br>

    <table class="table">
        <tr>
            <th scope="col">Content</th>
            <th scope="col">Department Id</th>


        </tr>
        {{#each news}}
            <tr>
                <td>{{content}}</td>
                <td>{{idDepartment}}</td>

            </tr>
        {{/each}}
    </table>

{{/partial}}
{{>layout.hbs}}